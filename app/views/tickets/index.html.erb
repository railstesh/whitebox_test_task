<br><%= link_to "New Task", new_project_ticket_path ,class:"btn btn-outline-primary"%>
<div class="container"><br>
  <div class="col-md-2">
    <h1>Task</h1><br>
  </div>
  <% if @project.tickets.count < 1 %>
    <h2>You don't have tasks as of now</h2>
  <% else%>
    <div class="col-md-10">
    <table class="table table-bordered table-striped table-hover">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>priority</th>
      <th>start_date</th>
      <th>end_date</th>
      <th>status</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.title %></td>
        <td><%= ticket.description%></td>
        <td><%= ticket.priority%></td>
        <td><%= ticket.start_date%></td>
        <td><%= ticket.end_date %></td>
        <td><%= ticket.status %></td>
        <td><%= link_to "Edit ", edit_project_ticket_path(@project, ticket) ,class:"btn btn-outline-primary"%><td>
        <td><%= link_to "Show ",project_ticket_path(@project, ticket) ,class:"btn btn-outline-primary"%><td>
        <td><%= button_to "delete",project_ticket_path(@project, ticket), method: :delete,class:"btn btn-outline-primary"%><td> 
      </tr>
    <% end %>
  <% end %>
  </div>
</div>
